<UserControl x:Class="LukaHorvat.GHCi.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="GHCiWindow">
    <Grid>
        <TextBox Name="ghciInput" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Bottom" Background="#00000000" Foreground="#FFCDCDCD" CaretBrush="#FFCDCDCD" KeyUp="ghciInput_KeyUp" BorderThickness="0,1,0,0"/>
        <TextBox Name="ghciOutput" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Visible" VerticalAlignment="Stretch" Background="Transparent" CaretBrush="#FFCDCDCD" Foreground="#FFCDCDCD" FontFamily="Consolas" TextDecorations="{x:Null}" Margin="0,0,0,23" BorderThickness="0"/>
    </Grid>
</UserControl>
